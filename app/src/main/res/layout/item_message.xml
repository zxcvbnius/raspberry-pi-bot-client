<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
                android:minHeight="65dp">

    <TextView
        android:id="@+id/message_others_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/item_user1_icon_bg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:text="W"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/message_self_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/item_user1_icon_bg"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:text="B"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_marginBottom="10dp"/>


    <ImageView
        android:id="@+id/message_content_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/message_others_icon"
        android:layout_toLeftOf="@+id/message_self_icon"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:visibility="invisible">
    </ImageView>

    <TextView
        android:id="@+id/message_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/message_others_icon"
        android:layout_toLeftOf="@+id/message_self_icon"
        android:layout_below="@+id/message_content_img"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/item_message_receving"
        android:padding="10dp"
        android:alpha="0.8"
        android:textColor="@color/white"
        android:text="hello">
    </TextView>

    <TextView
        android:id="@+id/message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/message_self_icon"
        android:layout_toRightOf="@+id/message_others_icon"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/message_content"
        android:text="17:20"
        android:textSize="12sp"/>



</RelativeLayout>